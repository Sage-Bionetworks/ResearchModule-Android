{
  "identifier": "PlaquesBodyMap",
  "steps": [
    {
      "identifier": "introduction",
      "type": "overview",
      "title": "Psoriasis Draw",
      "text": "In this activity you will be drawing the approximate size and location of your psoriasis. This will help you to track your psoriasis over time.",
      "image": {
        "type": "fetchable",
        "imageName": "srpm_draw_areas_intro",
        "placementType": "topBackground"
      },
      "actions": {
        "goForward": {
          "type": "base",
          "buttonTitle": "Get started"
        },
        "skip": {
          "type": "reminder",
          "reminderIdentifier": "PlaquesBodyMap"
        }
      }
    },
    {
      "identifier": "instruction",
      "type": "instruction",
      "title": "Select areas, then draw",
      "text": "First select the areas on your body that currently have psoriasis, then 'draw' the approximate size and location in each area.",
      "actions": {
        "goForward": {
          "type": "base",
          "buttonTitle": "Begin"
        }
      },
      "image": {
        "type": "animated",
        "imageNames": ["srpm_select_areas_joints1", "srpm_select_areas_joints2", "srpm_select_areas_joints3", "srpm_select_areas1", "srpm_select_areas2", "srpm_select_areas3", "srpm_draw_areas1", "srpm_draw_areas2", "srpm_draw_areas3", "srpm_draw_areas4", "srpm_draw_areas5", "srpm_draw_areas6"],
        "placementType": "topMarginBackground",
        "animationDuration": 4.5
      }
    },
    {
      "identifier": "bodySelection",
      "type": "bodySelection",
      "title": "Which areas of your body currently have psoriasis?",
      "inputFields": [
        {
          "uiHint": "list",
          "dataType": "multipleChoice.string",
          "choices": [
            {
              "text": "Above Waist: Front",
              "detail": "srpm_above_waist_front_button",
              "value": "frontUpper"
            },
            {
              "text": "Above Waist: Back",
              "detail": "srpm_above_waist_back_button",
              "value": "backUpper"
            },
            {
              "text": "Below Waist: Front",
              "detail": "srpm_below_waist_front_button",
              "value": "frontLower"
            },
            {
              "text": "Below Waist: Back",
              "detail": "srpm_below_waist_back_button",
              "value": "backLower"
            }
          ]
        }
      ],
      "actions": {
        "goForward": {
          "type": "base",
          "buttonTitle": "Continue"
        }
      }
    },
    {
      "identifier": "frontUpper",
      "type": "plaqueBodyMap",
      "title": "Draw your areas of psoriasis",
      "actions": {
        "goForward": {
          "type": "base",
          "buttonTitle": "Next"
        }
      },
      "image": {
        "type": "fetchable",
        "imageName": "srpm_psoriasis_draw_above_waist_front",
        "placementType": "fullsizeBackground"
      },
      "backgroundImage": {
        "type": "fetchable",
        "imageName": "srpm_psoriasis_draw_above_waist_front_background",
        "placementType": "fullsizeBackground"
      }
    },
    {
      "identifier": "frontLower",
      "type": "plaqueBodyMap",
      "title": "Draw your areas of psoriasis",
      "actions": {
        "goForward": {
          "type": "base",
          "buttonTitle": "Next"
        }
      },
      "image": {
        "type": "fetchable",
        "imageName": "srpm_psoriasis_draw_below_waist_front",
        "placementType": "fullsizeBackground"
      },
      "backgroundImage": {
        "type": "fetchable",
        "imageName": "srpm_psoriasis_draw_below_waist_front_background",
        "placementType": "fullsizeBackground"
      }
    },
    {
      "identifier": "backUpper",
      "type": "plaqueBodyMap",
      "title": "Draw your areas of psoriasis",
      "actions": {
        "goForward": {
          "type": "base",
          "buttonTitle": "Next"
        }
      },
      "image": {
        "type": "fetchable",
        "imageName": "srpm_psoriasis_draw_above_waist_back",
        "placementType": "fullsizeBackground"
      },
      "backgroundImage": {
        "type": "fetchable",
        "imageName": "srpm_psoriasis_draw_above_waist_back_background",
        "placementType": "fullsizeBackground"
      }
    },
    {
      "identifier": "backLower",
      "type": "plaqueBodyMap",
      "title": "Draw your areas of psoriasis",
      "actions": {
        "goForward": {
          "type": "base",
          "buttonTitle": "Next"
        }
      },
      "image": {
        "type": "fetchable",
        "imageName": "srpm_psoriasis_draw_below_waist_back",
        "placementType": "fullsizeBackground"
      },
      "backgroundImage": {
        "type": "fetchable",
        "imageName": "srpm_psoriasis_draw_below_waist_back_background",
        "placementType": "fullsizeBackground"
      }
    }
  ]
}