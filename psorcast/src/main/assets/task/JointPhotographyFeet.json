{
  "identifier": "JointPhotographyFeet",
  "steps": [
    {
      "identifier": "introduction",
      "type": "overview",
      "title": "Foot Photographing",
      "text": "In this activity you will photograph your bare feet with your toes in focus in order to track any changes that may come about",
      "image": {
        "type": "fetchable",
        "imageName": "srpm_photograph_foot",
        "placementType": "topBackground"
      },
      "icons": [
        {
          "icon": "srpm_flat_floor_icon",
          "title": "A FLAT FLOOR"
        },
        {
          "icon": "srpm_bare_foot_icon",
          "title": "BARE FEET"
        }
      ],
      "actions": {
        "goForward": {
          "type": "base",
          "buttonTitle": "Get started"
        }
      }
    },
    {
      "identifier": "bareFeetInstructionsLeft",
      "type": "instruction",
      "title": "Bare feet",
      "text": "Let's first begin by photographing the toes on a flat surface. You should not be wearing any socks, sandals or shoes for this activity.",
      "image": {
        "type": "animated",
        "imageNames": ["srpm_left_foot1", "srpm_left_foot2", "srpm_left_foot3"],
        "placementType": "topBackground",
        "animationDuration": 1.5
      },
      "actions": {
        "goForward": {
          "type": "default",
          "buttonTitle": "I'm not wearing shoes"
        }
      }
    },
    {
      "identifier": "captureToesInstructionsLeft",
      "type": "instruction",
      "title": "Capture your toes",
      "text": "Splay out your toes and capture them as closely as you can from directly above. Your toenails should be in focus.",
      "image": {
        "type": "fetchable",
        "imageName": "srpm_photograph_left_foot",
        "placementType": "topMarginBackground"
      },
      "actions": {
        "goForward": {
          "type": "default",
          "buttonTitle": "Capture left toes"
        }
      }
    },
    {
      "identifier": "leftToes",
      "type": "jointPhotography",
      "title": "Left Toes",
      "image": {
        "type": "fetchable",
        "imageName": "srpm_left_foot_outline",
        "placementType": "topMarginBackground"
      }
    },
    {
      "identifier": "leftToesVerify",
      "type": "photoDisplay",
      "title": "Are your nails in focus?",
      "actions": {
        "goForward": {
          "type": "base",
          "buttonTitle": "Yes"
        },
        "goBackward": {
          "type": "base",
          "buttonTitle": "Retake"
        }
      }
